    "devDependencies": {
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^6.4.14",
        "@types/uuid": "^9.0.7",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    }
