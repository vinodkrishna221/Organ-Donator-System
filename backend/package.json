{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend API for Organ Donation Platform",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "test": "jest",
        "test:recipients": "jest --testPathPattern=recipients",
        "test:donors": "jest --testPathPattern=donors",
        "test:donor-validation": "jest --testPathPattern=donor-validation",
        "test:matching": "jest --testPathPattern=matching",
        "test:matches": "jest --testPathPattern=matches",
        "test:rag": "jest --testPathPattern=rag",
        "test:analytics": "jest --testPathPattern=analytics",
        "test:email": "jest --testPathPattern=email",
        "test:integration": "jest --testPathPattern=integration",
