    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.0.3",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "uuid": "^9.0.1",
        "zod": "^3.22.4"
